<h2>ログイン</h2>
<%= form_with url: '/top/login', method: :post, local: true do |f| %>
  <%= f.label :uid, 'ユーザーID' %>
  <%= f.text_field :uid %>
  <%= f.label :pass, 'パスワード' %>
  <%= f.password_field :pass %>
  <%= f.submit 'ログイン' %>
<% end %>
<br>
<div id="signup-form">
  <%= link_to '新規登録はこちらから', top_signup_page_path %>
  <br>
  <%= link_to '登録一覧', '/users/index' %>
</div>
